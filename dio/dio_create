#!/bin/bash 

IOX_PATH="/home/unmesh/iox_test/"
source ${IOX_PATH}"common"
LOGGER_PATH=${IOX_PATH}"dio/logger"
STS_PATH=${IOX_PATH}"dio/sts"
DIO_CREATE_LOG=${IOX_PATH}"dio/dio_create_log"

err_parse_args="Error in parsing args data"
no_unid="No unid Provided"
sts_expected_state="unprovisioned"
device_created="Device already created"
invalid_provision="Invalid provision value"

test_num=1

subscribe_sts_event()
{
	mosquitto_sub -t "glp/0/17q2d9v/fb/dev/iox/dio/sts" > ${STS_PATH} 
	pids+=($!)
}

dio_create_test1()
{
	start_time=$(date | awk '{print $4}')
  	subscribe_logger_event &
	mosquitto_pub -m '{"action":"create"}' -t "glp/0/17q2d9v/rq/dev/iox/dio/do"
	parse_logger "${err_parse_args}" 
	result "logger"
	pub=("mosquitto_pub -m '{"action":"create"}' -t '"glp/0/17q2d9v/rq/dev/iox/dio/do"'")
	result_logs "dio_create_test" ${test_num} ${DIO_CREATE_LOG}  ${start_time} "${pub}"
}

dio_create_test2()
{
	start_time=$(date | awk '{print $4}')
	subscribe_logger_event &
	mosquitto_pub -m '{"action":"create","args":{"type":"900001050304DD00"}}' -t "glp/0/17q2d9v/rq/dev/iox/dio/do"
	parse_logger "${no_unid}"
	result "logger"
	pub=("mosquitto_pub -m '{"action":"create","args":{"type":"900001050304DD00"}}' -t '"glp/0/17q2d9v/rq/dev/iox/dio/do"'")
	result_logs "dio_create_test" ${test_num} ${DIO_CREATE_LOG}  ${start_time} "${pub}"
}

dio_create_test3()
{
	start_time=$(date | awk '{print $4}')
 	subscribe_logger_event &
	mosquitto_pub -m '{"action":"create","args":{"type":"900001050304DD00"}}' -t "glp/0/17q2d9v/rq/dev/iox/dio/do"
