dio_create_test6()
{
	start_time=$(date | awk '{print $4}')
 	subscribe_logger_event &
	mosquitto_pub -m '{"action":"create","args":{"type":"900001050304DD00","provision":true}}' -t "glp/0/17q2d9v/rq/dev/iox/dio/do"
	parse_logger "${no_unid}"
	result "logger"
	pub=("mosquitto_pub -m '{"action":"create","args":{"type":"900001050304DD00","provision":true}}' -t '"glp/0/17q2d9v/rq/dev/iox/dio/do"'")
	result_logs "dio_create_test" ${test_num} ${DIO_CREATE_LOG}  ${start_time} "${pub}"
}

dio_create_test7()
{
	start_time=$(date | awk '{print $4}')
	subscribe_sts_event &
  	subscribe_logger_event &
	mosquitto_pub -m '{"action":"create","args":{"type":"900001050304DD00","provision":false,"unid":"256"}}' -t "glp/0/17q2d9v/rq/dev/iox/dio/do"
	parse_sts "${sts_expected_state}"
	parse_logger "${no_unid}"
	result "sts"
	pub=("mosquitto_pub -m '{"action":"create","args":{"type":"900001050304DD00","provision":false,"unid":"256"}}' -t '"glp/0/17q2d9v/rq/dev/iox/dio/do"'")
	result_logs "dio_create_test" ${test_num} ${DIO_CREATE_LOG}  ${start_time} "${pub}"
}

dio_create_test8()
{
	start_time=$(date | awk '{print $4}')
 	subscribe_logger_event &
	mosquitto_pub -m '{"action":"create","args":{"type":"900001050304DD00","provision":true,"unid":"abcd"}}' -t "glp/0/17q2d9v/rq/dev/iox/dio/do"
	parse_logger "${device_created}"
	result "logger"
	pub=("mosquitto_pub -m '{"action":"create","args":{"type":"900001050304DD00","provision":true,"unid":"abcd"}}' -t '"glp/0/17q2d9v/rq/dev/iox/dio/do"'")
	result_logs "dio_create_test" ${test_num} ${DIO_CREATE_LOG}  ${start_time} "${pub}"
}

