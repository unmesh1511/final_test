	result_logs "dio_create_test" ${test_num} ${DIO_CREATE_LOG} ${start_time} "${pub}"
}

setup_time

dio_create_test1
dio_create_test2
dio_create_test3
dio_create_test4
dio_create_test5
dio_create_test6
dio_create_test7
sleep 30
dio_create_test8
dio_create_test9

kill_process


