dio_delete_test5()
{
	start_time=$(date | awk '{print $4}')
	subscribe_sts_event &
	subscribe_logger_event &
	mosquitto_pub -m '{"action":"delete"}' -t "glp/0/17q2d9v/rq/dev/iox/dio/do"
	parse_sts "${sts_expected_state}" ${DIO_DELETE_LOG}
	parse_logger "${del_without_mru}" ${DIO_DELETE_LOG}
	result "sts"
}

setup_time

dio_delete_test1
dio_delete_test2
dio_delete_test3
dio_delete_test4
dio_delete_test5

kill_process


