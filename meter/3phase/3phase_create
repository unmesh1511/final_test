}

3phase_create_test9()
{
	start_time=$(date | awk '{print $4}')
	subscibe_sts_event &
	pids+=($!)
	mosquitto_pub -m '{"action":"create","args":{"unid":"257","type":"meter","provision":false}}' -t "glp/0/${SID}/rq/dev/iox/${METER_DEV_NAME}/do"
	parse_sts "${phase_unprov_state}"
	result "sts"
	pub=("mosquitto_pub -m '{"action":"create","args":{"unid":"257","type":"meter","provision":false}}' -t '"glp/0/${SID}/rq/dev/iox/${METER_DEV_NAME}/do"'")
