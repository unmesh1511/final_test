}

3phase_provision_test5()
{
	start_time=$(date | awk '{print $4}')
	subscribe_sts_event &
	pids+=($!)
  	subscribe_logger_event &
	pids+=($!)
	mosquitto_pub -m '{"action":"provision","args":{"unid":"257"}}' -t "glp/0/${SID}/rq/dev/iox/${METER_DEV_NAME}/do"
	parse_sts "${phase_prov_state}"
	parse_logger "${phase_already_prov}"
	result "sts"
	pub=("mosquitto_pub -m '{"action":"provision","args":{"unid":"257"}}' -t '"glp/0/${SID}/rq/dev/iox/${METER_DEV_NAME}/do"'")
	result_logs "3phase_provision_test" ${LOG_3PHASE_PROVISION}  ${start_time} "${pub}"
}

