modbus_provision_test7()
{
	start_time=$(date | awk '{print $4}')  
	subscribe_logger_event &  
	pids+=($!)
	mosquitto_pub -m '{"action":"provision"}' -t "glp/0/17q2d9v/rq/dev/iox/pm820/do"
	parse_logger
	result "logger"
	pub=("mosquitto_pub -m '{"action":"provision"}' -t '"glp/0/17q2d9v/rq/dev/iox/pm820/do"'")
	result_logs "modbus_provision_test" ${LOG_MODBUS_PROV}  ${start_time} "${pub}"
}

