{
	start_time=$(date | awk '{print $4}')  
	subscribe_logger_event &  
	pids+=($!)
	mosquitto_pub -m '{"action":"provision","args":{"unid":"17"}}' -t "glp/0/17q2d9v/rq/dev/iox/pm820/do"
	parse_logger "${mod_pm820_dev}"
	result "logger"
	pub=("mosquitto_pub -m '{"action":"provision","args":{"unid":"17"}}' -t '"glp/0/17q2d9v/rq/dev/iox/pm820/do"'")
