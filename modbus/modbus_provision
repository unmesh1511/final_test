#!/bin/bash

source env_var.sh
source ${IOX_PATH}"/common.sh"
source ${IOX_PATH}"/iox.config"
source ${IOX_PATH}"/errors.sh"

LOG_EVENT_LOGGER=${IOX_PATH}"/modbus/logger"
LOG_STS=${IOX_PATH}"/modbus/sts"
LOG_MODBUS_PROV=${IOX_PATH}"/modbus/modbus_prov_log"

mod_pm820_dev="pm820 : device not found"
mod_miss_unid="provision : unid missing"
mod_3000_unid="3000 : invalid unid"
mod_01_unid="01:1 : invalid unid"
mod_prov_state="provisioned"
mod_slave_prov="pm820 : slave already provisioned"


subscribe_sts_event()
{
	 mosquitto_sub -t "glp/0/17q2d9v/fb/dev/iox/pm820/sts" > ${STS_PATH} 
}

modbus_provision_test1()
{
	start_time=$(date | awk '{print $4}')
	subscribe_logger_event & 
	pids+=($!)
	mosquitto_pub -m '{"action":"provision","args":{"unid":"01:1"}}' -t "glp/0/17q2d9v/rq/dev/iox/pm820/do"
	parse_logger "${mod_pm820_dev}"
	result "logger"
	pub=("mosquitto_pub -m '{"action":"provision","args":{"unid":"01:1"}}' -t '"glp/0/17q2d9v/rq/dev/iox/pm820/do"'")
	result_logs "modbus_provision_test" ${LOG_MODBUS_PROV}  ${start_time} "${pub}"
}

modbus_provision_test2()
{
	start_time=$(date | awk '{print $4}') 
	subscribe_logger_event &  
	pids+=($!)
	mosquitto_pub -m '{"action":"provision","args":{}}' -t "glp/0/17q2d9v/rq/dev/iox/pm820/do"
	parse_logger "${mod_miss_unid}"
	result "logger"
	pub=("mosquitto_pub -m '{"action":"provision","args":{}}' -t '"glp/0/17q2d9v/rq/dev/iox/pm820/do"'")
	result_logs "modbus_provision_test" ${LOG_MODBUS_PROV}  ${start_time} "${pub}"
}

modbus_provision_test3()
{
	start_time=$(date | awk '{print $4}')  
	subscribe_logger_event &  
	pids+=($!)
	mosquitto_pub -m '{"action":"provision","args":{"unid":"3000"}}' -t "glp/0/17q2d9v/rq/dev/iox/pm820/do"
	parse_logger "${mod_3000_unid}"
	result "logger"
	pub=("mosquitto_pub -m '{"action":"provision","args":{"unid":"3000"}}' -t '"glp/0/17q2d9v/rq/dev/iox/pm820/do"'")
	result_logs "modbus_provision_test" ${LOG_MODBUS_PROV}  ${start_time} "${pub}"
}

