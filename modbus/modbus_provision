modbus_provision_test8()
{
	echo "test8 : " > ${LOGGER_PATH}
	mosquitto_sub -t "glp/0/./=logger/event" >> ${LOGGER_PATH} &
	mosquitto_pub -m '{"action":"provision","args":{"unid":"17"}}' -t "glp/0/17q3jbh/rq/dev/iox/pm820/do"
