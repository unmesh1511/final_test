	subscribe_logger_event &  
	pids+=($!)
	mosquitto_pub -m '{"action":"provision","args":{"unid":"01:3"}}' -t "glp/0/17q2d9v/rq/dev/iox/pm820/do"
	parse_logger "${mod_slave_prov}"
	result "logger"
	pub=("mosquitto_pub -m '{"action":"provision","args":{"unid":"01:3"}}' -t '"glp/0/17q2d9v/rq/dev/iox/pm820/do"'")
